@{
  Layout = "_Layout";
  ViewData["Title"] = "Treats";
}

@using SweetSavory.Models

<div class="text-center">
  <h1 class="display-4">Available Treats</h1>
</div>

@if (Model.Count == 0)
{
  <p>No treats have been added to the database yet.</p>
}
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}

@if(User.Identity.IsAuthenticated)
{
  @Html.ActionLink("Create a new treat", "Create")
}